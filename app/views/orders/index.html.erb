<p id="notice"><%= notice %></p>

<h1>Заказы</h1>

<table class="table">
  <thead>
    <tr>
      <th>Номер</th>
      <th>ФИО</th>
      <th>Телефон</th>
      <th>Магазин</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
      <td><%= order.id %></td>
        <td><%= order.name %></td>
        <td><%= order.phone %></td>
        <td><%= order.store %></td>
        <td><%= link_to 'Открыть', order %></td>
        <td><%= link_to 'Редактировать', edit_order_path(order) %></td>
        <td><%= link_to 'Удалить', order, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

