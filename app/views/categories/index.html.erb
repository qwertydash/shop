<p id="notice"><%= notice %></p>

<h1>Категории</h1>
<% if admin_signed_in? %>
<%= button_to 'Новая категория', new_category_path, :class => "btn btn-primary btn-lg", :method => :get %>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th>Название</th>
     
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= link_to 'Открыть', category %></td>
        <% if admin_signed_in? %>
        <td><%= link_to 'Редактировать', edit_category_path(category) %></td>
        <td><%= link_to 'Удалить', category, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>




